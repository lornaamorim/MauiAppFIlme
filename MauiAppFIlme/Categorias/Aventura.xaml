<?xml version="1.0" encoding="utf-8" ?>
<ContentPage xmlns="http://schemas.microsoft.com/dotnet/2021/maui"
             xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
             x:Class="MauiAppFIlme.Categorias.NewPage1"
             Title="Aventura"
             BackgroundColor="Black">
    
    <VerticalStackLayout>
        
        <ScrollView>
            
            <Grid RowDefinitions="300, 300, 300"
                  ColumnDefinitions="*, *"
                  Padding="5">
                
                <ImageButton Aspect="AspectFill" Grid.Column="0" Grid.Row="0"
                             Source="Asociedadedaneve.png" x:Name="Asociedade"
                             Clicked="Asociedade_Clicked" />

                <ImageButton Aspect="AspectFill" Grid.Column="1" Grid.Row="0" 
                             Source="Desventuraemserie.png" x:Name="Desavent" 
                             Clicked="Desavent_Clicked"/>

                <ImageButton Aspect="AspectFill" Grid.Column="0" Grid.Row="1" 
                             Source="Emchamas.png" x:Name="Emchamas" 
                             Clicked="Emchamas_Clicked" />

                <ImageButton Aspect="AspectFill" Grid.Column="1" Grid.Row="1" 
                             Source="Interestellar.png" x:Name="Interestellar" 
                             Clicked="Interestellar_Clicked" />

            </Grid>
        </ScrollView>
    </VerticalStackLayout>
</ContentPage>
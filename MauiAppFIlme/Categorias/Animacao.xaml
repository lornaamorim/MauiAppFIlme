<?xml version="1.0" encoding="utf-8" ?>
<ContentPage xmlns="http://schemas.microsoft.com/dotnet/2021/maui"
             xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
             x:Class="MauiAppFilme.Categorias.Animacao"
             Title="Animacao"
             BackgroundColor="Black">

    <VerticalStackLayout>

        <ScrollView>

            <Grid RowDefinitions="300, 300, 300"
                  ColumnDefinitions="*, *"
                  Padding="5">

                <ImageButton Aspect="AspectFill" Grid.Column="0" Grid.Row="0"
                             Source="megamente.png" x:Name="mega"
                             Clicked="mega_Clicked"/>

                <ImageButton Aspect="AspectFill" Grid.Column="1" Grid.Row="0" 
                             Source="princesaeosapo.png" x:Name="princes" 
                             Clicked="princes_Clicked"/>

                <ImageButton Aspect="AspectFill" Grid.Column="0" Grid.Row="1" 
                             Source="princesaepopstar.png" x:Name="prineosapo" 
                             Clicked="prineosapo_Clicked" />

                <ImageButton Aspect="AspectFill" Grid.Column="1" Grid.Row="1" 
                             Source="ratatouille.png" x:Name="ratat" 
                             Clicked="ratat_Clicked" />

            </Grid>
        </ScrollView>
    </VerticalStackLayout>
</ContentPage>